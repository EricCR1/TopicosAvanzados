<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.MainPage"
             BackgroundColor="#F5F5F5">

    <StackLayout Padding="30" Spacing="15" VerticalOptions="Center" HorizontalOptions="Center">

        <Label Text="Agenda Personal"
               FontSize="26"
               FontAttributes="Bold"
               TextColor="#333333"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <Button Text="Lista de Contactos"
                Clicked="IrListaContactos"
                WidthRequest="250"
                BackgroundColor="#4F6D7A"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45" />

        <Button Text="Crear Nuevo Contacto"
                Clicked="IrCrearContacto"
                WidthRequest="250"
                BackgroundColor="#4F6D7A"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45" />

        <Button Text="Configuración"
                Clicked="IrConfiguracion"
                WidthRequest="250"
                BackgroundColor="#4F6D7A"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45" />

        <Button Text="Logout"
                x:Name="LogoutButton"
                Clicked="LogoutButton_Clicked"
                WidthRequest="250"
                BackgroundColor="#B00020"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45"
                Margin="0,30,0,0" />

    </StackLayout>
</ContentPage>
