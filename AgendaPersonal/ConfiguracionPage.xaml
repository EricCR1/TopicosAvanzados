<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.ConfiguracionPage"
             BackgroundColor="#F5F5F5">

    <AbsoluteLayout>

        <Label Text="Configuración"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#333333"
               AbsoluteLayout.LayoutBounds="0.5,0.1,-1,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Switch + Etiqueta -->
        <StackLayout Orientation="Horizontal"
                     AbsoluteLayout.LayoutBounds="0.5,0.3,-1,-1"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     Spacing="10"
                     VerticalOptions="Center">

            <Switch x:Name="NotificacionesSwitch"
                    OnColor="#4F6D7A" />

            <Label Text="Activar Notificaciones"
                   VerticalOptions="Center"
                   TextColor="#333333"
                   FontSize="16" />
        </StackLayout>

        <!-- Botón -->
        <Button Text="Cambiar Tema"
                BackgroundColor="#4F6D7A"
                TextColor="White"
                CornerRadius="10"
                FontAttributes="Bold"
                HeightRequest="45"
                WidthRequest="200"
                AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                AbsoluteLayout.LayoutFlags="PositionProportional" />

    </AbsoluteLayout>
</ContentPage>
